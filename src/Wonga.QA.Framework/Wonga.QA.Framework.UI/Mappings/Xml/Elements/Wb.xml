<?xml version="1.0" encoding="utf-8" ?>
<Elements>
    <!--PAGES SECTION-->
    <EligibilityQuestionsPage>
      <FormId>#lzero-questions-form</FormId>
      <CheckDirector>#edit-director</CheckDirector>
      <CheckResident>#edit-resident</CheckResident>
      <CheckActiveCompany>#edit-active-company</CheckActiveCompany>
      <CheckTurnover>#edit-turnover</CheckTurnover>
      <CheckVat>#edit-vat</CheckVat>
      <CheckOnlineAccess>#edit-online-access</CheckOnlineAccess>
      <CheckGuarantee>#edit-guarantee</CheckGuarantee>
      <NextButton>#edit-submit</NextButton>
      <CheckDebitCard>#edit-debit-card</CheckDebitCard>
    </EligibilityQuestionsPage>
    
    <PersonalDetailsPage>
      <FormId>#lzero-personal-form</FormId>
      <CheckPrivacyPolicy>#edit-privacy</CheckPrivacyPolicy>
      <CheckCanContact>input[type="radio"][name="update_option"]</CheckCanContact>
      <NextButton>#edit-submit</NextButton>
    </PersonalDetailsPage>
    
    <AddressDetailsPage>
      <FormId>#lzero-address-form</FormId>
      <LookupButton>#edit-submit-lookup</LookupButton>
      <Postcode>#edit-postcode-lookup-uk</Postcode>
      <District>#edit-district</District>
      <FlatNumber>#edit-flat</FlatNumber>
      <County>#edit-county</County>
      <AddressPeriod>#edit-address-period</AddressPeriod>
      <NextButton>#edit-submit</NextButton>
      <AddressOptions>#edit-address-options</AddressOptions>
    </AddressDetailsPage>

    <BusinessDetailsPage>
      <FormId>#lzero-business-form</FormId>
      <NextButton>#edit-submit</NextButton>
      <BusinessNumber>#edit-biz-number</BusinessNumber>
      <BusinessName>#edit-biz-name</BusinessName>
    </BusinessDetailsPage>

    <AdditionalDirectorsPage>
      <FormId>#lzero-directors-form</FormId>
      <DoneButton>#edit-submit</DoneButton>
      <AddAnotherDirector>#edit-add</AddAnotherDirector>
    </AdditionalDirectorsPage>

    <AddAditionalDirectorsPage>
      <FormId>#lzero-directors-form</FormId>
      <Title>#edit-title</Title>
      <FirstName>#edit-first-name</FirstName>
      <LastName>#edit-last-name</LastName>
      <EmailAddress>#edit-email</EmailAddress>
      <ConfirmEmailAddress>#edit-email-confirm</ConfirmEmailAddress>
      <DoneButton>#edit-submit</DoneButton>
      <AddAnotherButton>#edit-add</AddAnotherButton>
    </AddAditionalDirectorsPage>
    
    <BankAccountPage>
      <FormId>#lzero-business-bank-form</FormId>
      <NextButton>#edit-submit</NextButton>
    </BankAccountPage>

    <BusinessDebitCardPage>
      <FormId>#lzero-business-card-form</FormId>
      <NextButton>#edit-submit</NextButton>
    </BusinessDebitCardPage>

    <AcceptedPage>
      <FormId>#wonga-loan-approve-form</FormId>
      <AcceptBusinessLoan>#terms-accept .button</AcceptBusinessLoan>
      <AcceptGuarantorLoan>#guarantor-accept .button</AcceptGuarantorLoan>
      <SubmitButton>#edit-accept</SubmitButton>
    </AcceptedPage>

    <DealDonePage>
      <HeaderText>Your application has been approved</HeaderText>
      <ContinueButtonLink>.application-success-button</ContinueButtonLink>
    </DealDonePage>

    <DeclinedPage>
      <HeaderText>Application declined</HeaderText>
    </DeclinedPage>

    <!--SectionS SECTION-->

    <YourNameSection>
      <Legend>fieldset[id="name"]</Legend>
      <Title>#edit-title</Title>
      <FirstName>#edit-first-name</FirstName>
      <MiddleName>#edit-middle-name</MiddleName>
      <LastName>#edit-last-name</LastName>
    </YourNameSection>

    <YourDetailsSection>
      <Legend>fieldset[id="details"]</Legend>
      <Dependants>#edit-dependants</Dependants>
      <Gender>input[type="radio"][name="gender"]</Gender>
      <DateOfBirthDay>#edit-date-of-birth-day</DateOfBirthDay>
      <DateOfBirthMonth>#edit-date-of-birth-month</DateOfBirthMonth>
      <DateOfBirthYear>#edit-date-of-birth-year</DateOfBirthYear>
      <HomeStatus>#edit-home-status</HomeStatus>
      <MaritalStatus>#edit-marital-status</MaritalStatus>
    </YourDetailsSection>

    <ContactingYouSection>
      <Legend>fieldset[id="contact"]</Legend>
      <Email>#edit-email</Email>
      <EmailConfirm>#edit-email-confirm</EmailConfirm>
      <HomePhone>#edit-home-phone</HomePhone>
      <MobilePhone>#edit-mobile-phone</MobilePhone>
    </ContactingYouSection>

    <DebitCardSection>
      <Legend>#card-details</Legend>
      <CardType>#edit-card-type</CardType>
      <CardNumber>#edit-card-number</CardNumber>
      <CardName>#edit-card-name</CardName>
      <CardExpiryDateMonth>#edit-card-expiry-date-month</CardExpiryDateMonth>
      <CardExpiryDateYear>#edit-card-expiry-date-year</CardExpiryDateYear>
      <CardSecurityNumber>#edit-card-security</CardSecurityNumber>
      <CardStartDateMonth>#edit-card-start-date-month</CardStartDateMonth>
      <CardStartDateYear>#edit-card-start-date-year</CardStartDateYear>
    </DebitCardSection>
  
</Elements>