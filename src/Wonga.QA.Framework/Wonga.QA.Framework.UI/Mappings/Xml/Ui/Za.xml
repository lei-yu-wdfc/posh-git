<?xml version="1.0" encoding="utf-8" ?>
<Ui>
	<MyPaymentsPage>
		<PopupBankName>#edit-bank-name</PopupBankName>
		<PopupBankAccountType>#edit-bank-account-type</PopupBankAccountType>
		<PopupAccountNumber>#edit-account-number-za</PopupAccountNumber>
		<PopupLengthOfTime>#edit-bank-period</PopupLengthOfTime>
		<PopupAddBankAccountButton>#edit-submit</PopupAddBankAccountButton>
		<PopupExeption>#wonga-my-account-edit-bank-form div:nth-child(1) ul li</PopupExeption>
		<AccountNumber>#accounts tbody tr td table tbody tr:nth-child(2) td table tbody tr:nth-child(4) td b span</AccountNumber>
	</MyPaymentsPage>
	
  <ContactingYouSection>
    <HomePhone>#edit-home-phone-za</HomePhone>
    <MobilePhone>#edit-mobile-phone-za</MobilePhone>
  </ContactingYouSection>

  <MobilePinVerificationSection>
    <Pin>#edit-pin-za</Pin>
  </MobilePinVerificationSection>
  
  <EmploymentDetailsSection>
    <WorkPhone>#edit-work-phone-za</WorkPhone>
  </EmploymentDetailsSection>

  <PersonalDetailsPage>
    <MarriedInCommunityProperty>input[type="radio"][name="married"]</MarriedInCommunityProperty>
  </PersonalDetailsPage>
  
  <PersonalBankAccountDetailsPage>
    <FormId>#wonga-apply-lzero-form</FormId>
  </PersonalBankAccountDetailsPage>
  
  <AccountDetailsPage>
    <FormId>#wonga-apply-lzero-form</FormId>
    <NextButton>#edit-submit</NextButton>
  </AccountDetailsPage>

  <AccountDetailsSection>
    <Fieldset>#account-setup</Fieldset>
  </AccountDetailsSection>

  <DealDonePage>
    <HeaderText>Your application has been accepted, you’re almost there!</HeaderText>
  </DealDonePage>
  
  <AddressDetailsPage>
    <FormId>#wonga-apply-lzero-form</FormId>
    <District>#edit-district-za</District>
    <FlatNumber>#edit-house-number-za</FlatNumber>
    <Town>#edit-town-za</Town>
    <County>#edit-county-za</County>
    <AddressPeriod>#edit-address-period-za</AddressPeriod>
    <Street>#edit-street-za</Street>
    <Postcode>#edit-postcode-za</Postcode>
    <PostcodeErrorForm>div#edit-postcode-za-wrapper div.invalid</PostcodeErrorForm>
  </AddressDetailsPage>

  <AcceptedPage>
    <DetailsTable>div#agreementscroll div:nth-child(3) table tbody</DetailsTable>
    <LoanAmount>tr:nth-child(1)>td:nth-child(2)</LoanAmount>
    <PaymentDueDate>tr:nth-child(6)>td:nth-child(2)</PaymentDueDate>
    <TotalToPayOnPaymentDate>tr:nth-child(11)>td:nth-child(2)</TotalToPayOnPaymentDate>
  </AcceptedPage>
  
  <BankAccountSection>
    <Fieldset>#bank</Fieldset>
    <AccountNumber>#edit-account-number-za</AccountNumber>
  </BankAccountSection>

  <MyAccountNavigationSection>
    <!-- Should be extended-->
    <MySummary>div#block-wonga-6 ul.menu>li:nth-child(1)>a</MySummary>
    <MyPersonalDetails>div#block-wonga-6 ul.menu>li:nth-child(2)>a</MyPersonalDetails>
    <MyPaymentsDetails>div#block-wonga-6 ul.menu>li:nth-child(3)>a</MyPaymentsDetails>
  </MyAccountNavigationSection>

  <MyPersonalDetailsPage>
    <Address>table#profile tr#address</Address>
    <Password>table#profile tr#password</Password>
    <Phone>table#profile tr#phone</Phone>
    <Communication>table#profile tr#communication</Communication>
    <CommunicationText>table#profile tr#communication tbody tr:nth-child(1) td:nth-child(1)</CommunicationText>
    <CommunicationPrefs>input[type="radio"][name="comms_preference"]</CommunicationPrefs>
    <HomePhone>table#profile tr#phone tbody tr:nth-child(1)>td</HomePhone>
    <MobilePhone>table#profile tr#phone tbody tr:nth-child(2)>td</MobilePhone>
    <EditPhoneHome>input#edit-home-phone-za</EditPhoneHome>
    <EditPhoneMobile>input#edit-mobile-phone-za</EditPhoneMobile>
    <EditPhonePin>input#edit-mobile-pin</EditPhonePin>
    <EditPasswordCurrent>input#edit-current-password</EditPasswordCurrent>
    <EditPasswordNew>input#edit-password</EditPasswordNew>
    <EditPasswordConfirm>input#edit-password-confirm</EditPasswordConfirm>
    <EditPasswordErrorMessage>div#edit-password-wrapper div.form-error div[class='invalid']</EditPasswordErrorMessage>
    <EditPasswordPopupErrorMessage>form#wonga-my-account-profile-edit-password-form div.messages.error</EditPasswordPopupErrorMessage>
    <SubmitButton>input#edit-submit</SubmitButton>
  </MyPersonalDetailsPage>
  
  <AboutUsPage>
    <OurCustomers>#block-wonga-6 div div ul li:nth-child(2) a</OurCustomers>
    <ResponsibleLending>#block-wonga-6 div div ul li:nth-child(3) a</ResponsibleLending>
  </AboutUsPage>

  <MySummaryPage>
	 <PromisedRepayAmount>#content-area p span</PromisedRepayAmount>
	 <PromisedRepayDate>#content-area p strong em</PromisedRepayDate>
  </MySummaryPage>

  <HomePage>
    <Title>div#block-wonga-1 h2:nth-child(1)</Title>
    <TitleText>Flexible, short-term loans that give you lots of control</TitleText>
  </HomePage>
</Ui>