<Project DefaultTargets="Test" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
	<UsingTask TaskName="Gallio" AssemblyFile="$(ProgramFiles)\Gallio\bin\Gallio.MsBuildTasks.dll" Condition="Exists('$(ProgramFiles)\Gallio\bin\Gallio.MsBuildTasks.dll')"/>
	<UsingTask TaskName="Gallio" AssemblyFile="$(ProgramW6432)\Gallio\bin\Gallio.MsBuildTasks.dll" Condition="Exists('$(ProgramW6432)\Gallio\bin\Gallio.MsBuildTasks.dll')"/>
	
	
	<PropertyGroup>
		<Framework>Wonga.QA.Framework</Framework>
		<Tests>Wonga.QA.Tests</Tests>
	</PropertyGroup>
	
	<PropertyGroup>
		<Root>$(MSBuildProjectDirectory)\..</Root>
		<Src>$(Root)\src</Src>
		<Bin>$(Root)\bin</Bin>
	</PropertyGroup>
	
	<Target Name="Config">
		<Exec Command="SETX SUT $(SUT)" />
		<Exec Command="SETX AUT $(AUT)" />
	</Target>
	
	<Target Name="Build">
		<ItemGroup>
			<Projects Include="$(Src)\$(Framework)\$(Framework).sln" />
			<Projects Include="$(Src)\$(Tests)\$(Tests).sln" />
		</ItemGroup>
		<MSBuild Projects="@(Projects)" />
	</Target>
	
	<Target Name="Test" DependsOnTargets="Config;Build">
		<ItemGroup>
			<Files
				Include="$(Bin)\$(Tests)\$(Tests).*.dll"
				Exclude="$(Bin)\$(Tests)\$(Tests).Core.dll"
			/>
		</ItemGroup>
		<Gallio
			Files="@(Files)"
			Filter="Category: $(AUT)"
			ReportTypes="xml"
			ReportDirectory="$(Bin)\$(Tests).Report"
		/>
	</Target>
</Project>